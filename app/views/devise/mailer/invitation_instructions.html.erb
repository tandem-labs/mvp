<mj-section>
  <mj-column>
    <mj-text class="paragraph">
      Hello,
    </mj-text>

    <mj-text class="paragraph">
      <%= t("devise.mailer.invitation_instructions.someone_invited_you") %>
    </mj-text>

    <mj-text class="paragraph">
      <%= link_to t("devise.mailer.invitation_instructions.accept"), accept_user_invitation_url(@resource, invitation_token: @token) %>
    </mj-text>

    <% if @resource.invitation_due_at %>
      <mj-text class="paragraph">
        <%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %>
      </mj-text>
    <% end %>

    <mj-text class="paragraph">
      <%= t("devise.mailer.invitation_instructions.ignore").html_safe %>
    </mj-text>

    <mj-text class="paragraph">
      All the best!
    </mj-text>
  </mj-column>
</mj-section>
